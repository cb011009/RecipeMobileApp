
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ImageView -->
        <ImageView
            android:id="@+id/item_dish_image"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop" />

        <!-- CheckBox positioned on top of ImageView -->
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_dish_image"
            android:layout_alignEnd="@id/item_dish_image"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:buttonTint="#FFFFFF"
            android:background="@drawable/checkbox_background"/>

        <!-- TextView -->
        <TextView
            android:id="@+id/item_dish_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/item_dish_image"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textSize="18sp" />

        <!-- LinearLayout for buttons aligned to top left corner -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnShare"
                android:layout_width="50dp"
                android:layout_height="49dp"
                android:onClick="onShareClick"
                android:drawableLeft="@drawable/baseline_share_24"
                android:background="@drawable/round_button_background"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_margin="11dp"/>

            <!--
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:onClick="onEditClick"
                android:text="Edit"
                android:layout_marginEnd="10dp"/>-->

            <!-- Save Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Save" />

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>




